@model Pinicules.Presentation.Models.MoviesSearchResult

<script type="text/javascript">
    function OnComplete(request, status) {
        if ($('#loadMoreMoviesFormId').legth)
            $('#loadMoreMoviesFormId').replaceWith($("#loadMoreMoviesFormId", request.responseText));
        else
            $('#loadMoreDiv').html($("#loadMoreMoviesFormId", request.responseText));
    }
</script>

@if (Model.Items == null || Model.Items.Count == 0)
{
    <div>No results</div>
}
else
{
    <div class="container" id="searchResults">
        <div class="row">
            @{
    int numItems = 0;
            }
            @foreach (var searchResultItem in Model.Items)
            {
                <div class="col-md-2 @((@numItems++ % 5) == 0 ? "col-md-offset-1" : "")">
                    <div class="thumbnail">
                        <a href="@Url.Action("Movie", new { id = searchResultItem.Id, previousSearch = Model.SearchTerm})">
                            <img src="@searchResultItem.Image" alt="Sample Image">
                        </a>
                    </div>
                </div>

                if (((numItems) % 5) == 0)
                {
                    <br />
                    <div class="clearfix"></div>
                }
            }
        </div>
    </div>
    <div id="loadMoreDiv">
        @if (Model.LoadMore)
        {
            using (Ajax.BeginForm("SearchMovies", "Movies", new { page = Model.NextPage }, new AjaxOptions
            {
                UpdateTargetId = "searchMoviesResults",
                InsertionMode = InsertionMode.InsertAfter,
                OnComplete = "OnComplete",
            }, new { id = "loadMoreMoviesFormId" }))
            {
                <button type="submit" id="loadMoreMovies" class="btn btn-primary col-md-2 col-md-offset-5">LOAD MORE</button>
            }

        }
    </div>
}

